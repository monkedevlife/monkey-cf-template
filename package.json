{
  "name": "monkey-cf-template",
  "version": "0.1.0",
  "description": "A modern full-stack template with OpenNext, Cloudflare, tRPC, ShadCN, Drizzle, Postgres, and BetterAuth",
  "repository": {
    "type": "git",
    "url": "https://github.com/monkedevlife/monkey-cf-template.git"
  },
  "keywords": [
    "nextjs",
    "opennext",
    "cloudflare",
    "workers",
    "trpc",
    "drizzle",
    "postgresql",
    "better-auth",
    "shadcn",
    "tailwindcss",
    "template",
    "full-stack"
  ],
  "author": "Monke Dev",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:cf": "opennextjs-cloudflare build",
    "start": "next start",
    "lint": "biome check --fix",
    "format": "biome format --write",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "auth:generate": "npx @better-auth/cli generate --config src/server/auth/auth.ts --output src/server/db/schema/auth.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "email:dev": "email dev --dir src/server/emails --port 3001",
    "generate-secret": "openssl rand -base64 32"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.17.0",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@neondatabase/serverless": "^1.0.2",
    "@opennextjs/cloudflare": "^1.11.0",
    "@react-email/components": "^0.5.7",
    "@tanstack/react-query": "^5.90.5",
    "@trpc/client": "^11.6.0",
    "@trpc/next": "^11.6.0",
    "@trpc/react-query": "^11.6.0",
    "@trpc/server": "^11.6.0",
    "@trpc/tanstack-react-query": "^11.6.0",
    "better-auth": "^1.3.28",
    "class-variance-authority": "^0.7.1",
    "client-only": "^0.0.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.6",
    "drizzle-valibot": "^0.4.2",
    "next": "15.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-email": "^4.3.1",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "drizzle-kit": "^0.31.5",
    "postgres": "^3.4.7",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.43.0"
  }
}
